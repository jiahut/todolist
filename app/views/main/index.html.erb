<%= render :partial => "common/bootstrap.css", :locals => { contains: "main"}%>

<div class="navbar">
	<div class="navbar-inner">
	  <div class="container-fluid">
	    <a class="btn btn-navbar" data-toggle="collapse" data-target=".top-nav.nav-collapse,.sidebar-nav.nav-collapse">
	      <span class="icon-bar"></span>
	      <span class="icon-bar"></span>
	      <span class="icon-bar"></span>
	    </a>
	    <a class="brand" href="/">
	    	<img alt="Todolist" src="/imgs/todolist.png" />
	    </a>
	    <div class="top-nav nav-collapse">
	      <ul class="nav">
	        <li>
	          <form class="navbar-search pull-left">
	            <input placeholder="Search" class="search-query span3" name="query" type="text">
	          </form>
	        </li>
	      </ul>
	    </div>
	    <!-- user dropdown starts -->
	    <div class="btn-group pull-right" >
	      <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
	        <i class="icon-user"></i><span class="hidden-phone"><%= @user.name-%></span>
	        <span class="caret"></span>
	      </a>
	      <ul class="dropdown-menu">
	        <li><a href="#">Profile</a></li>
	        <li class="divider"></li>
	        <li><a href="users/logout">Logout</a></li>
	      </ul>
	    </div>
	    <!-- user dropdown ends -->
	  </div>
	</div>
</div>
<% if notice %>
	<div class="alert alert-success" ><%= notice -%>
	<a class="close" data-dismiss="alert" href="#">&times;</a></div>
<% end %>
<div class="container-fluid">
	<div class="row-fluid">
	  <div class="span2">
	    <div class="nav-collapse">
	        <ul class="nav nav-tabs nav-stacked">
	          <li class="nav-header hidden-tablet">shortcut</li>
	          <li><a><i class="icon-tasks"></i><span class="hidden-tablet"> all</span></a></li>
	          <li><a><i class="icon-th-list"></i><span class="hidden-tablet"> unfinished</span></a></li> 
	          <li><a><i class="icon-stop"></i><span class="hidden-tablet"> overdued</span></a></li>
	          <li><a><i class="icon-check"></i><span class="hidden-tablet"> completed</span></a></li>
	          <li><a><i class="icon-barcode"></i><span class="hidden-tablet"> discarded</span></a></li>
	        </ul>
	    </div>
	   	<div class="nav-collapse">
	        <ul class="nav nav-tabs nav-stacked">
	          <li class="nav-header hidden-tablet">tasks</li>
	          <li><a><i class="icon-envelope"></i><span class="hidden-tablet" id="task-new-btn">new</span></a></li>
	        </ul>
	        <div id="task-new-modal" class="modal hide fade" tabindex="-1"></div>
	    </div>
	  </div>
	  <div class="span10">
	    <div class="box-content">
	    	<table class="table table-bordered table-striped table-hover table-condensed">
              <thead>
                <tr>
                  <th>Task Name</th>
                  <th>Complete</th>
                  <th>Describe</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>   
              <tbody>
              <% @tasks.each do |task| %>
	              <tr>
	                <td> <%= task.taskname %></td>
	                <td class="center"><%= task.anticipated %></td>
	                <td class="center"><%= task.describe %></td>
	                <td class="center">
	                  <span class="label label-success"><%= task.status %></span>
	                </td>
	                <td class="center">
	                  <span class="btn btn-info task-edit-btn" data-task-id="<%= task.id %>">
	                    <i class="icon-edit icon-white"></i>                                           
	                  </span>
	                  <span class="btn btn-danger task-destroy-btn" data-task-id="<%=task.id %>">
	                    <i class="icon-trash icon-white"></i>
	                  </span>
	                </td>
	              </tr>
	          <% end %>
	          </tbody>
            </table>
	  	</div>
	  </div>
	</div>
</div>
<%= render :partial => "common/bootstrap.js" %> 